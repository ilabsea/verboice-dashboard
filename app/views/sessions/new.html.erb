<%= page_title_with "Login" %>

<div class="authentication">
  <%= simple_form_for(@login_form, url: sessions_path,  html: {class: 'form-signin form-horizontal' }) do |f| %>
    <div class="logo text-center">
      <img style="max-height:300px;" src="http://verboice.com/assets/verboice-857c939abe0540f1afb39dcafecdec0f.png">
    </div>

    <div class="panel panel-info">
      <div class="panel-header alert alert-info" role="alert">
        Authentication
      </div>
      <div class="panel-body">
          <%= f.input :email, input_html: { class: 'no-margin' } %>
          <%= f.input :password, autocomplete: 'off' %>

          <%= submit_row do %>
            <%= f.submit 'Login', class: 'btn btn-primary btn-submit btn-block' %>
          <% end %>
      </div>
    </div>

    <div class="author">
      <p>
        &copy; 2015
        <a href='http://www.instedd.org' style='text-decoration:none;'>
          <img src='http://www.ilabsoutheastasia.org/wp-content/themes/instedd_v3/images/favicon.ico' />
          InSTEDD
        </a>
      </p>
    </div>
  <% end %>
</div>
